<!-- item_chore.xml -->
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView android:id="@+id/tv_chore_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" android:textStyle="bold"/>

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView android:id="@+id/tv_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" android:textColor="#555555"
                    android:layout_marginEnd="10dp"/>

                <TextView android:id="@+id/tv_next_due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <Button android:id="@+id/btn_chore_done"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Done âœ“"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.TonalButton"/>

        <Button android:id="@+id/btn_chore_delete"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="ðŸ—‘" android:textSize="14sp"
            android:layout_marginStart="4dp"
            style="@style/Widget.Material3.Button.IconButton"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
